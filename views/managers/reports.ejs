<%- include('../header'); -%>

    <h1>
        <%= title %>
    </h1>

    <p>Select the Employee to run the report for</p>

    <form method="post">
        <fieldset class="form-group">
            <label for="selectedEmployee" class="col-2 control-label">
                Selected Employee: *
            </label>
            <select class="form-control-sm" name="selectedEmployee" id="selectedEmployee">
                <% employees.forEach(function(employee) { %>
                    <option value="<%= employee.username %>">
                        <%= employee.username %>
                    </option>
                    <% }); %>
            </select>
        </fieldset>
        <fieldset class="form-group">
            <button class="btn btn-info offset-3">
                Run Report
            </button>